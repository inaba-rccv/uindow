{
  "compilerOptions": {
    "target": "es2016",
    "jsx": "preserve",
    "lib": ["ESNext", "DOM"],
    "baseUrl": ".",
    "module": "ESNext",
    "moduleResolution": "node",
    "paths": {
      "@uindow/components/*": ["packages/components/*"],
      "@uindow/components": ["packages/components"],
      "@uindow/utils": ["packages/utils"],
      "@uindow/hooks/*": ["packages/hooks/*/index.ts"],
      "@uindow/*": ["packages/*/src/index.ts"]
    },
    "resolveJsonModule": true,
    "strict": true,
    "outDir": "dist",
    "sourceMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "types": ["vite/client", "vue"]
  }
}
